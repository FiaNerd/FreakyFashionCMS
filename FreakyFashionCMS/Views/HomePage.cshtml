@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = null;
}

@{
    var image = Model.Value<IPublishedContent>("heroImage");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;300;400;700;900&display=swap" rel="stylesheet">

    <title>Freaky Fashion CMS</title>
</head>

<body>
    <header>
        <div class="headerContainer">
            <img class="logo" src="" Logo FF" />

            <nav>
                <ul>
                    <li><a href="#">Home</a></li>
                </ul>

                <div>

                </div>

            </nav>
        </div>
    </header>

    <main>
        <div class="heroContainer">
            <h1 class="heroTitle">@Model.Value("heroHeading")</h1>
            <img class="heroImage" src="@image.Url()" alt="image hero" />
            <h3 class="heroText">@Model.Value("heroMessage")</h3>
        </div>
    </main>

    <footer>
        <div class="footer-container">
            <p>&copy; Copyright 2021 FreakyFashion</p>
        </div>
    </footer>
</body>
</html>