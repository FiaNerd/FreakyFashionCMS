@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    var image = Model.Value<IPublishedContent>("heroImage");
}

<div class="heroContainer">
    <div class="info-text">
        <h2>@Model.Value("heroHeading")</h2>
        <span>@Model.Value("heroTextInfo") </span>

        <div class="btn-container">
        <button class="btn">Buy</button>
        </div>
    </div>

    <div class="hero">
        <img class="heroImage" src="@image.Url()" alt="image hero" />
        <h1 class="heroTitle">@Model.Value("heroTitle")</h1>
        <h3 class="heroText">@Model.Value("heroText")</h3>
    </div>
</div>